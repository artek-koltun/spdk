{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "every weekend"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ARG TAG=(?<currentValue>.*?)\\n"],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "spdk/spdk",
      "versioningTemplate": "loose"
    }
  ]
}
